{{template "base" .}}

{{define "content"}}

    <div id="mycorousel" class="carousel slide carousel-fade" data-bs-ride="carousel"> <!-- Use col-8 to set the width of the carousel -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#mycorousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#mycorousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#mycorousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="2000">
                <img src="../static/image/homepic1.jpg" class="d-block w-100" alt="..." width="1200" height="600"> <!-- Use w-100 to make the image fill the container -->
                <div class="carousel-caption d-none d-md-block">
                    <h5>Our Farm</h5>
                    <p>Something about our farm</p>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="../static/image/homepic2.jpg" class="d-block w-100" alt="..." width="1200" height="600">
                
                <div class="carousel-caption d-none d-md-block">
                    <h5>Our Raspberry</h5>
                    <p>Something about our raspberry</p>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="../static/image/homepic3.jpg" class="d-block w-100" alt="..." width="1200" height="600">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Our lemon</h5>
                    <p>lemon...</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h1 class="text-center">Welcome to Monbaree</h1>
        <div class="row">
            <div class="col text-center">
                <a type="button" class="btn btn-success">Check out product</a>
                <a type="button" class="btn btn-success">Buy our product</a>
            </div>
        </div>
        
    </div>

    <!-- <div class="row my-footer">
        <div class="col">left</div>
